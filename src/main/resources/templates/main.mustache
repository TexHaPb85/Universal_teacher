<html>
<head>
    <title>Universal teacher</title>
</head>
<body>
    <div>
        <form method="post">
            <input type="questionText" name="questionText" placeholder="enter question">
            <input type="questionText" name="tag" placeholder="enter tag">
            <button type="submit">Submit</button>
        </form>
    </div>
    <div>Question List:</div>
    <form method="post" action="filter">
        <input type="text" name="filterInp">
        <button type="submit">Filter by Tag</button>
    </form>
    {{#questions}}
        <div>
            <b>{{id}}</b>
            <span>{{questionText}}</span>
            <i>{{tag}}</i>
        </div>
    {{/questions}}
</body>
</html>